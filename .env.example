# =============================================================================
# Environment Variables Template
# Copy this file to .env and update values for your deployment
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DB_NAME=social_media
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_HOST=db
DB_PORT=5432

# -----------------------------------------------------------------------------
# Django Configuration
# -----------------------------------------------------------------------------
DEBUG=False
SECRET_KEY=your-very-long-and-secure-secret-key-change-me
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Stripe Configuration
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# -----------------------------------------------------------------------------
# Next.js Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000/
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for channel layers)
# -----------------------------------------------------------------------------
USE_REDIS_CHANNELS=False
REDIS_URL=redis://redis:6379/0

# Upstash Redis (if using Upstash)
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# -----------------------------------------------------------------------------
# OAuth Configuration (Optional)
# -----------------------------------------------------------------------------
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
APPLE_OAUTH_CLIENT_ID=your-apple-oauth-client-id

# -----------------------------------------------------------------------------
# Django Superuser (created on first run)
# -----------------------------------------------------------------------------
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password

# -----------------------------------------------------------------------------
# Security (Production)
# -----------------------------------------------------------------------------
SECURE_SSL_REDIRECT=False
